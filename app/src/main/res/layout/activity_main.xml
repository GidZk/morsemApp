<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gidzk.morsemapp.MainActivity"
    android:background="@drawable/typewriter">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="courier"
        android:lineSpacingExtra="10sp"
        android:text="@string/welcome_reg"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Time"
        android:textSize="40sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:fontFamily="courier"
        android:text="@string/welcome_button"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
